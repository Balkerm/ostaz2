<h1>Transactions</h1>
<div class="span8">
<table class="table table-condensed">
  <tr>
    <th>ID</th>
    <th>Amount</th>
    <th>From</th>	
    <th>To</th>
	<th>Date</th>
	<th>Receipt</th>
    <th></th>
	<th></th>	
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%= transaction.id %></td>
    <td><%= transaction.amount %></td>
	<td><%= link_to  transaction.from.name , transaction.from %></td>
	<td><%= link_to  transaction.to.name , transaction.to %></td>
	<td><%= transaction.created_at  %></td>
	<td>
	<% if (transaction.receipt_file_name.nil?) %>
		-
	<% else %>
		<%= transaction.receipt_file_name %>
	<% end %>
	</td>
    <td><%= link_to 'Show', transaction %></td> 
	<% if can? :update, Transaction %>
	<td><%= link_to 'Edit', edit_transaction_path(transaction) %></td> 	
	<% end %>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'New Transaction', new_transaction_path %>
</div>
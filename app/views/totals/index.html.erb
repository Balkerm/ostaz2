<h1> Main Accounts </h1>
<div class="span8">
<table class="table table-condensed">
  <tr>
    <th>Account</th>
    <th>Balance</th>         
  </tr>

<% @accounts.each do |acc| %>
  <tr>    
    <td>Main <%= acc.AccountType.name %></td>
    <td><%= acc.balance %></td>	    
  </tr>
<% end %>
</table>


<%= link_to 'My sub-Accounts', accounts_path %>
</div>
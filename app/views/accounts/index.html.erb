<h1>Accounts</h1>

<table id="accounts">
  <tr>
    <th>Name</th>   
    <th>Balance</th>
    <th>Accounttype</th>
    <th></th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.name %></td>    
    <td><%= account.balance %></td>
    <td><%= account.AccountType.name%></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>    
  </tr>
<% end %>
</table>

